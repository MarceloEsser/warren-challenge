<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">#007c91</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RowObjectiveStyle">
        <item name="android:background">@drawable/row_objective_background</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="TextInputEditTextStyle">
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_text_field_drawable</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="hintTextColor">@color/white</item>
        <item name="placeholderTextColor">@color/white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="RedRoundedButton">
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:fontFamily">@font/balootammabold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/balootammabold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>